<%- include('../partials/header.ejs') -%>
  <%- include('../partials/nav.ejs') -%>

    <!-- navbar end -->
    <main class="content">
      <div class="container mt-3">
        <h1 class="text-center mb-4">Transaksi</h1>

        <div class="card border-0">
          <div class="card-header">
            <h5 class="card-title">
              Transaksi Terbaru
            </h5>

          </div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Id Transaksi</th>
                  <th scope="col">Id Barang</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                  <th scope="col">Tanggal</th>
                </tr>
              </thead>
              <tbody>
                <% if (dataTransaksi.length> 0) { %>
                  <% dataTransaksi.forEach(data=> { %>
                    <tr>

                      <td>
                        <%= data.id %>
                      </td>

                      <td>
                        <%= data.id_barang %>
                      </td>

                      <td>
                        <%= data.jumlah %>
                      </td>

                      <td>Rp <%= parseInt(data.total).toLocaleString('id-ID')%>
                      </td>

                      <td>
                        <%= data.waktu %>
                      </td>

                    </tr>
                    <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="4" style="text-align: center;">Tidak ada transaksi ditemukan.</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </main>
    <a href="#" class="theme-toggle">
      <img src="/image/light-mode.svg" alt="" class="avatar night-mode">
      <img src="/image/night-mode.svg" alt="" class="avatar light-mode">
    </a>

    <%- include('../partials/footer.ejs') -%>